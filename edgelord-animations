local humanoid = game:GetService("Players").LocalPlayer.Character.Humanoid
local idleanim = Instance.new("Animation")
local walkanim = Instance.new("Animation")

idleanim.AnimationId = 16163355836
walkanim.AnimationId = 16163350920
humanoid.Parent.Animate:Destroy()

local walkAnimationTrack = humanoid:LoadAnimation(walkanim)
animationTrack.Looped = true
local idleAnimationTrack = humanoid:LoadAnimation(idleanim)
humanoid.Running:Connect(function(speed)
  if speed > 0 then
        if not walkAnimationTrack.IsPlaying then
            moveAnimationTrack:Play()
        end
        if idleAnimationTrack.IsPlaying then
            idleAnimationTrack:Stop()
        end
    else
        if moveAnimationTrack.IsPlaying then
            moveAnimationTrack:Stop()
        end
        if not idleAnimationTrack.IsPlaying then
            idleAnimationTrack:Play()
        end
    end
else

end)
