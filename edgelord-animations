 -- General Setup
local players = game:GetService("Players")
local char = players.LocalPlayer.Character
local humanoid = char:WaitForChild("Humanoid")
 -- Animation Setup
local animate = char.Animate
local forceanim = Instance.new("Animation")
forceanim.AnimationId = "rbxassetid://17670135152"
animate.climb.ClimbAnim.AnimationId = "rbxassetid://507765644"
animate.fall.FallAnim.AnimationId = "rbxassetid://507767968"
animate.idle.Animation1.AnimationId = "rbxassetid://16163355836"
animate.idle.Animation2.AnimationId = "rbxassetid://16163355836"
animate.jump.JumpAnim.AnimationId = "rbxassetid://507765000"
animate.run.RunAnim.AnimationId = "rbxassetid://16163350920"
animate.walk.WalkAnim.AnimationId = "rbxassetid://16163350920"
 -- Audio Setup
local theme = Instance.new("Sound")
theme.SoundId = "rbxassetid://9133844756"
theme.Looped = true
theme.Parent = char.HumanoidRootPart
theme:Play()
 -- Aura Setup
local highlight = Instance.new("Highlight")
highlight.Parent = char
highlight.Name = VFX1
highlight.FillColor = Color3.fromRGB(0,0,0)
highlight.OutlineColor = Color3.fromRGB(255,255,255)
highlight.OutlineTransparency = 0
highlight.FillTransparency = 0
 -- Force Tool Setup
local forcetool = Instance.new("Tool")
forcetool.RequiresHandle = false
forcetool.Name = "Force Tool"
forcetool.Parent = players.LocalPlayer.Backpack
forcetool.Activated:Connect(function()
local forceanimtrack = humanoid:LoadAnimation(forceanim)
forceanimtrack:Play()
end)
 -- Aura & Music Tool Setup
local auratool = Instance.new("Tool")
local IsActivated = Instance.new("BoolValue")
IsActivated.Value = true
IsActivated.Parent = musictool
auratool.RequiresHandle = false
auratool.Parent = players.LocalPlayer.Backpack
auratool.Activated:Connect(function()
if IsActivated.Value == true then
IsActivated.Value = false
highlight.Enabled = false
theme:Stop()
else
IsActivated.Value = true
highlight.Enabled = true
theme:Play()
end
end)




